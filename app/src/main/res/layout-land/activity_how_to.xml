<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:foobar="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1881A9"
                tools:context="koemdzhiev.com.quickshoppinglist.ui.HowToActivity">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_above="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <com.ctrlplusz.anytextview.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="285dp"
                android:textSize="13sp"
                android:lineSpacingExtra="1dp"
                android:scrollbars = "vertical"
                android:text="@string/how_to_use"
                android:id="@+id/textView4"
                android:textColor="@android:color/white"
                android:paddingLeft="22sp"
                android:paddingRight="22sp"
                android:layout_marginBottom="1dp"
                foobar:typeface="JungleFeverNF.otf"/>

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scroll down for more"
        android:id="@+id/textView6"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_above="@+id/goToAppButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/goToAppButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
