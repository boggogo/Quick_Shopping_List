<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:foobar="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#1881A9"
                tools:context="koemdzhiev.com.quickshoppinglist.ui.HowToActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HOW TO USE"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

            <com.ctrlplusz.anytextview.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="440dp"
                android:textSize="13sp"
                android:lineSpacingExtra="1dp"
                android:scrollbars = "vertical"
                android:text="@string/how_to_use"
                android:id="@+id/textView4"
                android:textColor="@android:color/white"
                android:paddingLeft="22sp"
                android:paddingRight="22sp"
                foobar:typeface="JungleFeverNF.otf"/>


        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scroll down for more"
        android:id="@+id/textView6"
        android:layout_marginBottom="2dp"
        android:textColor="@android:color/secondary_text_dark"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/goToAppButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
